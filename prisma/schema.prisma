// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  role          String    @default("USER") // "USER", "ADMIN", "INTERVIEWER"
  phone         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  password      String?
  organization  Organization? @relation(fields: [organizationId], references: [id])
  organizationId String?
  lastLoginAt   DateTime?
  status        String    @default("active") // "active", "inactive", "suspended"
  tests         Test[]
  auditLogs     AuditLog[]
  invitations   Invitation[] @relation("InvitedBy")
  sentInvitations TestAssignment[] @relation("Inviter")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Organization {
  id                String    @id @default(cuid())
  name              String
  subscriptionStatus String    @default("trial") // "trial", "active", "expired", "cancelled"
  subscriptionType  String    @default("basic") // "basic", "pro", "enterprise"
  expiryDate        DateTime?
  maxUsers          Int       @default(5)
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  users             User[]
}

model Test {
  id                     String    @id @default(cuid())
  title                  String
  jobDescription         String?   @db.Text
  resumeUrl              String?
  duration               Int       // in minutes
  requiresSecondaryCamera Boolean   @default(false)
  enableAIProctoring      Boolean   @default(true)
  enableVoiceRecognition  Boolean   @default(true)
  thirdCameraOptional     Boolean   @default(false)
  proctoringLevel        String    @default("standard") // "basic", "standard", "strict"
  jobRequirements        String?   @db.Text
  difficulty             String?   // "Easy", "Intermediate", "Hard"
  tags                   String[]  @default([])
  status                 String    @default("draft") // "draft", "active", "archived"
  createdAt              DateTime  @default(now())
  updatedAt              DateTime  @updatedAt
  createdBy              String
  user                   User      @relation(fields: [createdBy], references: [id])
  questions              Question[]
  assignments            TestAssignment[]
  aiGeneratedQuestions   Boolean   @default(false)
}

model Question {
  id            String    @id @default(cuid())
  testId        String
  type          String    // "conversational" or "coding"
  text          String    @db.Text
  timeToStart   Int?      // Seconds to start answering, null for coding questions
  timeLimit     Int?      // Time limit in minutes for coding questions
  difficulty    String?   // "Easy", "Intermediate", "Hard"
  order         Int       // Question order in the test
  hints         String?   @db.Text
  requiredLanguage String? // For coding questions
  maxRecordingTime Int?  // For conversational questions in seconds
  tags          String[]  @default([])
  aiGenerated   Boolean   @default(false)
  prompt        String?   @db.Text // AI generation prompt if applicable
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  test          Test      @relation(fields: [testId], references: [id], onDelete: Cascade)
  answers       Answer[]
}

model Candidate {
  id            String    @id @default(cuid())
  name          String
  email         String
  phone         String?
  resumeUrl     String?
  experience    String?   @db.Text
  skills        String[]  @default([])
  notes         String?   @db.Text
  source        String?   // "manual", "csv_import", "api"
  status        String    @default("active") // "active", "inactive", "blacklisted"
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  assignments   TestAssignment[]
}

model TestAssignment {
  id            String    @id @default(cuid())
  testId        String
  candidateId   String
  uniqueLink    String    @unique
  status        String    @default("pending") // "pending", "in_progress", "completed", "expired", "cancelled"
  emailSent     Boolean   @default(false)
  emailSentAt   DateTime?
  expiresAt     DateTime?
  startedAt     DateTime?
  completedAt   DateTime?
  currentQuestionIndex Int @default(0)
  overallProgress Float   @default(0.0)
  notes         String?   @db.Text
  test          Test      @relation(fields: [testId], references: [id])
  candidate     Candidate @relation(fields: [candidateId], references: [id])
  proctorSessions ProctorSession[]
  answers       Answer[]
  inviterId     String?   // User who sent the invitation
  inviter       User?     @relation("Inviter", fields: [inviterId], references: [id])
}

model Answer {
  id               String    @id @default(cuid())
  questionId       String
  testAssignmentId String
  type             String    // "audio", "code", "text"
  content          String?   @db.Text
  recordingUrl     String?
  codeSubmission   String?   @db.Text
  fileName         String?
  fileSize         Int?
  fileHash         String?
  recordingMetadata Json?     // Metadata for audio recordings
  startedAt        DateTime?
  submittedAt      DateTime?
  reviewStatus     String    @default("pending") // "pending", "reviewed", "flagged"
  score            Float?
  feedback         String?   @db.Text
  language         String?   // For code answers
  duration         Float?    // Duration in seconds for audio answers
  question         Question  @relation(fields: [questionId], references: [id])
  testAssignment   TestAssignment @relation(fields: [testAssignmentId], references: [id])
}

model ProctorSession {
  id                String    @id @default(cuid())
  testAssignmentId  String
  startedAt         DateTime  @default(now())
  endedAt           DateTime?
  primaryCameraActive Boolean   @default(true)
  secondaryCameraActive Boolean   @default(false)
  secondaryCameraRequired Boolean   @default(false)
  microphoneActive  Boolean   @default(true)
  voiceCalibrationComplete Boolean @default(false)
  thirdCameraSetupComplete Boolean @default(false)
  browserInfo       Json?     // Browser and system information
  ipAddress         String?
  userAgent         String?
  testAssignment    TestAssignment @relation(fields: [testAssignmentId], references: [id])
  violations        Violation[]
  calibrationData   Json?     // Voice calibration and camera setup data
}

model Violation {
  id               String    @id @default(cuid())
  proctorSessionId String
  type             String    // "face_violation", "gaze_violation", "audio_violation", "object_violation", "secondary_camera_violation"
  severity         String    // "CRITICAL", "MAJOR", "MINOR"
  description      String?
  timestamp        DateTime  @default(now())
  evidenceUrl      String?
  evidenceData     Json?     // Additional evidence data
  cameraSource     String?   // "primary", "secondary"
  status           String    @default("PENDING_REVIEW") // "PENDING_REVIEW", "CONFIRMED", "DISMISSED"
  aiConfidence     Float?    // AI detection confidence score
  suppressed       Boolean   @default(false) // Whether violation was suppressed by secondary camera analysis
  proctorSession   ProctorSession @relation(fields: [proctorSessionId], references: [id])
}

model AuditLog {
  id          String   @id @default(cuid())
  userId      String
  action      String   // "create", "update", "delete", "login", "logout", "role_change"
  resource    String   // Resource type that was acted upon
  resourceId  String?  // ID of the resource
  oldValue    Json?    // Previous value for updates
  newValue    Json?    // New value for updates
  ipAddress   String?
  userAgent   String?
  timestamp   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
}

model Invitation {
  id          String   @id @default(cuid())
  email       String
  token       String   @unique
  role        String   @default("USER") // "USER", "ADMIN", "INTERVIEWER"
  organizationId String?
  inviterId   String   // User who sent the invitation
  acceptedAt  DateTime?
  expiresAt   DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  inviter     User     @relation("InvitedBy", fields: [inviterId], references: [id])
}

model EmailNotification {
  id          String   @id @default(cuid())
  to          String
  subject     String
  template    String   // Template name used
  data        Json?    // Template data
  status      String   @default("pending") // "pending", "sent", "failed", "bounced"
  sentAt      DateTime?
  error       String?
  retryCount  Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model QuestionTransition {
  id              String @id @default(cuid())
  testId          String
  fromQuestionId  String?
  toQuestionId    String
  condition       String? // Condition for transition
  createdAt       DateTime @default(now())
}

model CodeExecutionResult {
  id          String   @id @default(cuid())
  answerId    String
  language    String
  code        String   @db.Text
  input       String?  @db.Text
  output      String?  @db.Text
  error       String?  @db.Text
  executionTime Int     // Execution time in milliseconds
  memoryUsage Int?    // Memory usage in bytes
  status      String   // "success", "error", "timeout"
  createdAt   DateTime @default(now())
}
