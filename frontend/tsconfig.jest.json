{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "commonjs",
    "types": ["jest", "node", "@testing-library/jest-dom"],
    "isolatedModules": false,
    "esModuleInterop": true,
    "moduleResolution": "node16"
  },
  "include": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "jest.config.ts",
    "__tests__/**/*"
  ]
}
